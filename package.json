{
  "name": "@nodestation/root",
  "version": "1.14.12",
  "main": "index.js",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodestationapp/nodestation.git"
  },
  "author": {
    "name": "Nodestation",
    "email": "ceo@nodestation.app"
  },
  "workspaces": [
    "packages/*",
    "packages/core/*"
  ],
  "scripts": {
    "test": "vitest",
    "release": "release-it",
    "dev": "nodestation dev",
    "start": "nodestation start",
    "build": "nodestation build",
    "dev:watch": "nodestation dev --watch",
    "dev:client": "npm --prefix ./packages/client start",
    "build:client": "npm --prefix ./packages/client run build",
    "dev:server": "nodemon ./packages/nodestation/index.js"
  },
  "devDependencies": {
    "@release-it-plugins/workspaces": "^4.2.0",
    "@release-it/conventional-changelog": "^9.0.3",
    "dotenv-webpack": "^8.1.0",
    "release-it": "^17.10.0",
    "supertest": "^7.0.0",
    "vitest": "^2.1.8"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "npm": false,
    "github": {
      "release": true
    },
    "hooks": {
      "before:release": "npm run build:client"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "chore(deps)",
            "section": "Chores"
          },
          {
            "type": "test",
            "section": "Tests"
          }
        ]
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "packages/*",
          "packages/core/*"
        ]
      }
    }
  }
}
