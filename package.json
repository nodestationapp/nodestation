{
  "name": "@nodestation/root",
  "version": "1.20.2",
  "main": "index.js",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodestationapp/nodestation.git"
  },
  "author": {
    "name": "Nodestation",
    "email": "ceo@nodestation.app"
  },
  "workspaces": [
    "packages/*",
    "packages/core/*"
  ],
  "scripts": {
    "test": "vitest",
    "release": "release-it",
    "dev": "nodestation dev",
    "start": "nodestation start",
    "build": "nodestation build"
  },
  "devDependencies": {
    "@release-it-plugins/workspaces": "^4.2.0",
    "@release-it/conventional-changelog": "^9.0.3",
    "release-it": "^17.10.0",
    "supertest": "^7.0.0",
    "vitest": "^2.1.8"
  },
  "overrides": {
    "glob": "^11.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "npm": false,
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "chore",
            "section": "Chores"
          },
          {
            "type": "test",
            "section": "Tests"
          }
        ]
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "packages/*",
          "packages/core/*"
        ]
      }
    }
  },
  "dependencies": {
    "@nstation/addon-documentation": "^0.0.2"
  }
}
